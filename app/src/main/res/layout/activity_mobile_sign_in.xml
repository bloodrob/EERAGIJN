<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/feedback"
    tools:context="com.dev.r19.SakoriSarothiClient.MobileSIgnIn">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/mobileFrame">
        <TextView
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="100dp"
            android:textSize="17dp"
            android:textStyle="bold"
            android:text="@string/varifyMobile" />
        <EditText
            android:id="@+id/mobile_otp"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="130dp"
            android:hint="Enter OTP"
            android:inputType="phone"
            android:textAlignment="center"/>
        <Button
            android:id="@+id/submit_otp"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="170dp"
            android:background="@drawable/btn_5"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:text="Varify"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mobileFrame">
        <TextView
            android:id="@+id/varify_view"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="50dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="17dp" />
        <Button
            android:id="@+id/submit_mobile_reg"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="170dp"
            android:background="@drawable/btn_5"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:text="Continue"/>
    </FrameLayout>

</RelativeLayout>
