<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://scemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="5dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardBackgroundColor="#c5dbe4"
    card_view:cardMaxElevation="5dp"
    card_view:contentPadding="12dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/job_card_view"
        android:padding="12dp">

        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="#000000"
            android:text="Last Date"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/jobdate_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="160dp"
            android:layout_marginRight="15dp"
            android:fontFamily="sans-serif"
            android:textColor="#000000"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/jobname_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:textSize="18dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>