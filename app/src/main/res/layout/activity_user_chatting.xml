<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dev.r19.SakoriSarothiClient.UserChatting">
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@drawable/mysendbutton"
        android:id="@+id/below_list"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:fabSize="mini" />
<com.google.android.material.textfield.TextInputLayout
    android:layout_width = "match_parent"
    android:layout_height= "wrap_content"
    android:layout_toLeftOf = "@id/below_list"
    android:layout_alignParentBottom ="true"
    android:layout_alignParentStart = "true">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="type message"
        android:id="@+id/chat_message"
        />
</com.google.android.material.textfield.TextInputLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/below_list"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:dividerHeight="18dp"
        android:divider="@android:color/transparent"
        android:id="@+id/list_of_chat_message"
        android:layout_marginBottom="18dp"/>



</RelativeLayout>
