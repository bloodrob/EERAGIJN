<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_2"
    tools:context="com.dev.r19.eeragijn.CheckUploadFile">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <Button
        android:id="@+id/check_person_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="48dp"
        android:text="Check the person image"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
            <Button
        android:id="@+id/check_person_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/check_person_image"
        android:layout_below="@+id/check_person_image"
        android:layout_marginTop="66dp"
        android:text="Check the person sign" />


    <Button
        android:id="@+id/check_person_hslc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/check_person_sign"
        android:layout_below="@+id/check_person_sign"
        android:layout_marginTop="68dp"
        android:text="Check HSLC certificate" />


            <Button
                android:id="@+id/check_person_hs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/check_person_hslc"
                android:layout_below="@+id/check_person_hslc"
                android:layout_marginTop="68dp"
                android:text="Check HS certificate" />


            <Button
                android:id="@+id/check_person_graduation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/check_person_hs"
                android:layout_below="@+id/check_person_hs"
                android:layout_marginTop="68dp"
                android:text="Check Graduation" />


            <Button
                android:id="@+id/check_person_postgraduation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/check_person_graduation"
                android:layout_below="@+id/check_person_graduation"
                android:layout_marginTop="68dp"
                android:text="Check Post-Graduation" />


            <Button
                android:id="@+id/check_person_cast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/check_person_postgraduation"
                android:layout_below="@+id/check_person_postgraduation"
                android:layout_marginTop="68dp"
                android:text="Check Cast Cerificate" />


            <Button
                android:id="@+id/check_person_prc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/check_person_cast"
                android:layout_below="@+id/check_person_cast"
                android:layout_marginTop="68dp"
                android:text="Check PRC Cerificate" />


            <Button
        android:id="@+id/to_generate_id"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginLeft="120dp"
        android:layout_below="@+id/check_person_prc"
        android:layout_marginTop="24dp"
        android:background="@drawable/btn_2"
        android:textStyle="italic"
        android:text="Generate Id" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
