<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_2"
    tools:context="com.dev.r19.eeragijn.SearchNewUserByDistrict">

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="Enter the district of the new user "
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/select_district"
        android:layout_marginEnd="40dp" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="48dp"
        android:text="NAme Of the district"
        android:textColor="#000000"
        android:layout_below="@+id/textView22"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/select_district"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView24"
        android:layout_alignBottom="@+id/textView24"
        android:layout_toEndOf="@+id/textView24"
        android:layout_marginStart="19dp" />

    <Button
        android:id="@+id/submit_search_info"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="18dp"
        android:text="Search new user"
        android:background="@drawable/btn_2"
        android:layout_below="@+id/select_district"
        android:layout_alignStart="@+id/textView22" />


    <ListView
        android:id="@+id/view_search_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/submit_search_info"
        android:layout_marginTop="25dp"
        android:layout_alignParentEnd="true" />



</RelativeLayout>
