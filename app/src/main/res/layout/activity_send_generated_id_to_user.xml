<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_2"
    tools:context="com.dev.r19.eeragijn.SendGeneratedIdToUser">

    <Button
        android:id="@+id/back_to_home"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="92dp"
        android:background="@drawable/btn_2"
        android:text="Back To Home"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/back_to_resend"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/back_to_home"
        android:background="@drawable/btn_2"
        android:layout_marginStart="58dp"
        android:layout_toEndOf="@+id/back_to_home"
        android:text="Back To previous page" />

    <TextView
        android:id="@+id/view_success_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/back_to_home"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="90dp"
        android:textColor="#000000"
        android:layout_toStartOf="@+id/back_to_resend"
        android:text="TextView" />

    <TextView
        android:id="@+id/view_failure_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/view_success_msg"
        android:layout_below="@+id/view_success_msg"
        android:layout_marginTop="53dp"
        android:textColor="#000000"
        android:text="TextView" />

    <Button
        android:id="@+id/push_user_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:text="Tap To Successfully assined the Emloyee Id to the user"
        android:layout_alignBaseline="@+id/view_success_msg"
        android:layout_alignBottom="@+id/view_success_msg"
        android:layout_alignStart="@+id/back_to_resend" />
</RelativeLayout>
