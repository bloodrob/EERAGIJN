<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_2"
    tools:context="com.dev.r19.eeragijn.AdminLogin">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:text="Sign in yourself with the appropriate required credential"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/AUserId"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView7"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="64dp"
        android:textAlignment="center"
        android:ems="10"
        android:background="@drawable/btn_2"
        android:inputType="textPersonName"
        android:hint="name" />

    <EditText
        android:id="@+id/APass"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/AUserId"
        android:layout_below="@+id/AUserId"
        android:layout_marginTop="63dp"
        android:textAlignment="center"
        android:ems="10"
        android:hint="password"
        android:background="@drawable/btn_2"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/AUserId"
        android:textColor="#000000"
        android:layout_marginStart="21dp"
        android:text="User Name / Id" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView8"
        android:layout_alignTop="@+id/APass"
        android:textColor="#000000"
        android:text="Password" />

    <Button
        android:id="@+id/AdminLogin"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/APass"
        android:layout_below="@+id/APass"
        android:layout_marginTop="66dp"
        android:background="@drawable/btn_1"
        android:textStyle="bold"
        android:text="Log in" />
</RelativeLayout>
