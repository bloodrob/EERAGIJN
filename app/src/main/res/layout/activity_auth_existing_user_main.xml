<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_2"
    tools:context="com.dev.r19.eeragijn.AuthExistingUserMainActivity">

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="126dp"
        android:textColor="#000000"
        android:text="EE id" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="42dp"
        android:textColor="#000000"
        android:text="Please enter the following infromation to get access" />

    <EditText
        android:id="@+id/reg_ee_id"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_toEndOf="@+id/textView18"
        android:layout_marginLeft="70dp"
        android:layout_below="@+id/textView19"
        android:layout_marginTop="52dp"
        android:background="@drawable/btn_2"
        android:textAlignment="center"
        android:ems="10"
        android:inputType="textPersonName"
        />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView18"
        android:layout_below="@+id/reg_ee_id"
        android:layout_marginTop="64dp"
        android:textColor="#000000"
        android:text="date of birth" />

    <EditText
        android:id="@+id/reg_date_of_birth"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/reg_ee_id"
        android:layout_below="@+id/reg_ee_id"
        android:layout_marginTop="55dp"
        android:background="@drawable/btn_2"
        android:textAlignment="center"
        android:ems="10"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/reg_password"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/reg_date_of_birth"
        android:layout_below="@+id/reg_date_of_birth"
        android:layout_marginTop="53dp"
        android:background="@drawable/btn_2"
        android:textAlignment="center"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/reg_password"
        android:layout_alignEnd="@+id/textView20"
        android:layout_marginBottom="13dp"
        android:textColor="#000000"
        android:text="Your system password" />

    <Button
        android:id="@+id/submit_data"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_2"
        android:layout_below="@+id/reg_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:textStyle="bold"
        android:text="Submit" />

</RelativeLayout>
