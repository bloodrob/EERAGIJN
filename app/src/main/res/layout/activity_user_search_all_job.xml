<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_3"
    tools:context="com.dev.r19.eeragijn.UserSearchAllJob">
    <ImageView
        android:id="@+id/image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/userhomelogo" />
    <TextView
        android:id="@+id/textView53"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="120dp"
        android:layout_below="@+id/image"
        android:text="Here is the list of all job"
        android:textAlignment="center"
        android:textSize="17dp"
        android:textStyle="italic"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"/>

    <ListView
        android:id="@+id/list_off_all_search_job"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignStart="@+id/textView53"
        android:layout_below="@+id/textView53"
        android:layout_marginTop="80dp" />
</RelativeLayout>
