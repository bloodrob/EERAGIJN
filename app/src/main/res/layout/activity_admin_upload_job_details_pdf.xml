<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dev.r19.eeragijn.AdminUploadJobDetailsPdf">

    <TextView
        android:id="@+id/textView44"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="81dp"
        android:text="Choose the Pdf file of the desired job to be uploaded"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/choose_pdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Choose The Pdf"
        android:layout_below="@+id/textView44"
        android:layout_alignStart="@+id/textView44"
        android:layout_marginStart="76dp" />

    <Button
        android:id="@+id/upload_pdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="42dp"
        android:text="Upload The Pdf"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/choose_pdf"
        android:layout_marginStart="45dp" />

    <TextView
        android:id="@+id/show_success_upload_pdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/choose_pdf"
        android:layout_toStartOf="@+id/get_the_pdf_name" />

    <TextView
        android:id="@+id/get_the_pdf_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/upload_pdf"
        android:layout_alignEnd="@+id/choose_pdf"
        android:layout_marginBottom="60dp"
         />
</RelativeLayout>
