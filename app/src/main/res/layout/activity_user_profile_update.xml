<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1"
    tools:context="com.dev.r19.SakoriSarothiClient.UserProfileUpdate">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frame1">
        <TextView
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:layout_marginLeft="100dp"
            android:text="PERSONAL INFORMATION"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:textStyle="bold"/>
    </FrameLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frame1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relative1">
            <TextView
                android:id="@+id/nameView"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_alignBaseline="@+id/user_name"
                android:layout_marginLeft="20dp"
                android:textSize="15dp"
                android:textColor="#000000"
                android:text="Name"/>
            <EditText
                android:id="@+id/user_name"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_alignLeft="@+id/nameView"
                android:layout_marginLeft="70dp"
                android:textColor="#000000"
                android:textAlignment="center"
                android:background="@drawable/text_1"/>
            <TextView
                android:id="@+id/emailView"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_below="@+id/nameView"
                android:layout_alignBaseline="@+id/email"
                android:layout_marginLeft="20dp"
                android:textSize="15dp"
                android:textColor="#000000"
                android:text="E-mail"/>
            <EditText
                android:id="@+id/email"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_alignStart="@+id/user_name"
                android:layout_below="@+id/user_name"
                android:background="@drawable/text_1"/>
            <TextView
                android:id="@+id/preferView"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_below="@+id/emailView"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="20dp"
                android:textSize="15dp"
                android:textColor="#000000"
                android:text="Preferences"/>
            <Spinner
                android:id="@+id/preferences"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_below="@+id/email"
                android:layout_marginTop="10dp"
                android:layout_alignStart="@+id/user_name"></Spinner>
            <TextView
                android:id="@+id/choiceView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@+id/preferView"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="20dp"
                android:textSize="15dp"
                android:textColor="#000000"
                android:text="Few About the Choice"/>
            <EditText
                android:id="@+id/aboutChoice"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_alignStart="@+id/user_name"
                android:layout_below="@+id/preferences"
                android:textColor="#000000"
                android:textAlignment="center"
                android:background="@drawable/text_1"/>
            <TextView
                android:id="@+id/lastQualiView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@+id/choiceView"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="20dp"
                android:textSize="15dp"
                android:textColor="#000000"
                android:text="Latest Qualification"/>
            <Spinner
                android:id="@+id/latsQuali"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginTop="35dp"
                android:layout_alignStart="@+id/user_name"
                android:layout_below="@+id/aboutChoice"
                android:textColor="#000000"

                ></Spinner>
            <TextView
                android:id="@+id/mobileView"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_below="@+id/lastQualiView"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:textSize="15dp"
                android:textColor="#000000"
                android:text="Mobile"/>
            <EditText
                android:id="@+id/mobile"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginTop="60dp"
                android:layout_alignStart="@+id/user_name"
                android:layout_below="@+id/latsQuali"
                android:textColor="#000000"
                android:textAlignment="center"
                android:background="@drawable/text_1"/>
            <Button
                android:id="@+id/submit_persional_info"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_1"
                android:layout_below="@+id/mobile"
                android:layout_marginTop="100dp"
                android:layout_alignStart="@+id/mobile"
                android:layout_marginLeft="30dp"
                android:text="SUBMMIT"
                android:textStyle="bold"
                android:textColor="#000000"/>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
