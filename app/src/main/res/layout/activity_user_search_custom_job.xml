<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1"
    tools:context="com.dev.r19.SakoriSarothiClient.UserSearchCustomJob">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:id="@+id/myFrameId"
        android:background="@drawable/unsignuser">
    <TextView
        android:id="@+id/textView59"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="110dp"
        android:textSize="23dp"
        android:text="search job that you prefer"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:textSize="16dp"
        android:textColor="#000000"
        android:layout_marginLeft="180dp"
        android:textStyle="bold"
        android:text="Check the category"
        android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/userhomelogo"
            android:layout_marginLeft="15dp"
            />

    <Spinner
        android:id="@+id/category_search"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="140dp"
        android:textCursorDrawable="@drawable/color_cursor"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/custom_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="165dp"
        android:layout_marginLeft="200dp"
        android:textColor="#000000"
        android:text="Search"
        android:layout_centerHorizontal="true" />

    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/myFrameId2"
        android:layout_below="@+id/myFrameId">
        <TextView
            android:id="@+id/custom_search_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="#ffffff"
            android:textStyle="bold|italic"
            />
    <ListView
        android:id="@+id/list_of_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/myFrameId2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"/>
    </FrameLayout>
</RelativeLayout>
