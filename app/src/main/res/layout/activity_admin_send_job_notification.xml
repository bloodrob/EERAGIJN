<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1"
    tools:context="com.dev.r19.eeragijn.AdminSendJobNotification">

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="Send the job notification"/>

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView29"
        android:layout_marginStart="42dp"
        android:layout_marginTop="53dp"
        android:textColor="#ffffff"
        android:text="Name of Job" />

    <EditText
        android:id="@+id/name_of_job"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView31"
        android:background="@drawable/btn_1"
        android:layout_alignStart="@+id/textView31"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textColor="#000000"
        android:inputType="textPersonName"
         />

    <TextView
        android:id="@+id/textView36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_of_job"
        android:layout_marginTop="40dp"
        android:layout_alignStart="@+id/textView31"
        android:textColor="#ffffff"
        android:text="Subject of job"/>

    <EditText
        android:id="@+id/subject_of_job"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/name_of_job"
        android:layout_below="@+id/textView36"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textColor="#000000"
        android:background="@drawable/btn_1"
        android:inputType="textPersonName"
         />

    <TextView
        android:id="@+id/textView40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView36"
        android:layout_below="@+id/subject_of_job"
        android:layout_marginTop="40dp"
        android:textColor="#ffffff"
        android:text="Details of the job" />

    <EditText
        android:id="@+id/details_of_job"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/subject_of_job"
        android:layout_below="@+id/textView40"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textColor="#000000"
        android:background="@drawable/btn_1"
        android:inputType="textPersonName"
         />

    <Button
        android:id="@+id/send_job_noti"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@+id/details_of_job"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:background="@drawable/btn_4"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:text="Send Notification" />
</RelativeLayout>
