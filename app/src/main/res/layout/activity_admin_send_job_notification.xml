<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dev.r19.eeragijn.AdminSendJobNotification">

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:text="Fill the below details and send the job notification"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView29"
        android:layout_marginStart="24dp"
        android:layout_marginTop="87dp"
        android:text="Name of Job" />

    <EditText
        android:id="@+id/name_of_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView29"
        android:layout_marginEnd="23dp"
        android:layout_marginTop="74dp"
        android:ems="10"
        android:inputType="textPersonName"
         />

    <TextView
        android:id="@+id/textView36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subject of job"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/textView31" />

    <EditText
        android:id="@+id/subject_of_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/name_of_job"
        android:layout_centerVertical="true"
        android:ems="10"
        android:inputType="textPersonName"
         />

    <TextView
        android:id="@+id/textView40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView36"
        android:layout_below="@+id/subject_of_job"
        android:layout_marginTop="52dp"
        android:text="Details of the job" />

    <EditText
        android:id="@+id/details_of_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/subject_of_job"
        android:layout_below="@+id/subject_of_job"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:inputType="textPersonName"
         />

    <Button
        android:id="@+id/send_job_noti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details_of_job"
        android:layout_marginStart="33dp"
        android:layout_marginTop="46dp"
        android:layout_toEndOf="@+id/textView40"
        android:text="Send Notification" />
</RelativeLayout>
