<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dev.r19.eeragijn.SearchAllExistingUserByDistrict">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Name The District of the users to be Searched"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="District Name"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <Spinner
        android:id="@+id/spinner_district_list"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="37dp" />

    <Button
        android:id="@+id/submit_district"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="Submit The Search"
        android:layout_below="@+id/spinner_district_list"
        android:layout_centerHorizontal="true" />

    <ListView
        android:id="@+id/exist_user_searched_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignEnd="@+id/submit_district"
        android:layout_below="@+id/submit_district"
        android:layout_marginTop="49dp" />
</RelativeLayout>
