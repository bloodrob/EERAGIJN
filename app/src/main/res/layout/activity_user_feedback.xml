<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/feedback"
    tools:context="com.dev.r19.SakoriSarothiClient.UserFeedback">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fram12">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="17dp"
            android:textSize="20dp"
            android:textColor="#000000"
            android:text="Please Give Your Valuable Feedback Here"/>
    </FrameLayout>
        <ScrollView
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:id="@+id/scrol12"
            android:layout_below="@+id/fram12">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="25dp"
                    android:text="You want to give us"
                    android:textSize="17dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="11dp"/>
                <Spinner
                    android:id="@+id/feedback_category"
                    android:layout_width="180dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="180dp"
                    />
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginLeft="11dp"
                    android:text="Message"
                    android:textSize="17dp"/>
                <EditText
                    android:id="@+id/feedback_message"
                    android:layout_width="180dp"
                    android:layout_height="250dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginLeft="180dp"
                    android:textSize="13dp"
                    android:textColor="#000000"
                    android:gravity="left|top"/>
                <Button
                    android:id="@+id/submit_feedback"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="420dp"
                    android:layout_marginLeft="115dp"
                    android:textSize="13dp"
                    android:textColor="#000000"
                    android:background="@drawable/btn_5"
                    android:text="Submit Feedback"/>


            </RelativeLayout>

        </ScrollView>

</RelativeLayout>
