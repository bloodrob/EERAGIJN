<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_2"
    tools:context="com.dev.r19.SakoriSarothiClient.UserRegistration">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:id="@+id/userRegFrame">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/ic_directions_bike_black_24dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="20dp"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userRegFrame"
        android:id="@+id/userRegFram1"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <TextView
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:fontFamily="sans-serif-black"
            android:text="By Using Phone Number"/>
        <EditText
            android:id="@+id/req_mobile"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="95dp"
            android:textAlignment="center"
            android:inputType="phone"
            android:text="+91"
            android:hint="Enter Mobile Number"/>
        <Button
            android:id="@+id/submit_req_mobile"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="105dp"
            android:background="@drawable/btn_2"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginLeft="135dp"
            android:text="Submit"/>
        <TextView
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="180dp"
            android:textSize="18dp"
            android:fontFamily="sans-serif-black"
            android:text="Or By Email Password"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userRegFram1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/IdToAccess"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:textCursorDrawable="@drawable/color_cursor"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:hint="Enter Email" />

        <EditText
            android:id="@+id/Upass"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="50dp"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textColor="#000000"
            android:hint="Enter Password"
            android:textAlignment="center"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/UconPass"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="90dp"
            android:textCursorDrawable="@drawable/color_cursor"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:hint="Confirm Password"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/EnterReg"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="135dp"
            android:background="@drawable/btn_2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="140dp"
            android:textColor="#ffffff"
            android:text="Submit"
            android:textStyle="bold"/>
    </FrameLayout>
</RelativeLayout>
