<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_2"
    tools:context="com.dev.r19.SakoriSarothiClient.UserRegistration">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/ic_directions_bike_black_24dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:text="Email or Phone no"
        android:textColor="#000000"
        android:layout_marginTop="200dp"/>


    <EditText
        android:id="@+id/IdToAccess"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView3"
        android:background="@drawable/btn_1"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textCursorDrawable="@drawable/color_cursor"
        android:inputType="textPersonName"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginEnd="21dp" />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="#000000"
        android:layout_below="@+id/IdToAccess"
        android:layout_marginTop="18dp"
        android:layout_alignStart="@+id/textView3" />


    <EditText
        android:id="@+id/Upass"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/IdToAccess"
        android:layout_below="@+id/IdToAccess"
        android:layout_marginTop="37dp"
        android:background="@drawable/btn_1"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textAlignment="center"
        android:textColor="#000000"
        android:inputType="textPassword" />
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password"
        android:textColor="#000000"
        android:layout_below="@+id/Upass"
        android:layout_marginTop="18dp"
        android:layout_alignStart="@+id/textView5" />

    <EditText
        android:id="@+id/UconPass"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/Upass"
        android:layout_below="@+id/Upass"
        android:layout_marginTop="37dp"
        android:background="@drawable/btn_1"
        android:textCursorDrawable="@drawable/color_cursor"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/EnterReg"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@+id/UconPass"
        android:background="@drawable/btn_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:textColor="#ffffff"
        android:text="Submit"
        android:textStyle="bold"/>
</RelativeLayout>
