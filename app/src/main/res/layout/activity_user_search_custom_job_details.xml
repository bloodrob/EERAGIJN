<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1"
    tools:context="com.dev.r19.eeragijn.UserSearchCustomJobDetails">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frame1">
        <TextView
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:layout_marginLeft="100dp"
            android:text="Available Job"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:textStyle="bold"/>
    </FrameLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frame1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relative1">
            <TextView
                android:id="@+id/nameView"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_alignBaseline="@+id/name_job"
                android:layout_marginLeft="20dp"
                android:textSize="15dp"
                android:textColor="#000000"
                android:text="Job Name"/>
            <EditText
                android:id="@+id/name_job"
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_alignLeft="@+id/nameView"
                android:layout_marginLeft="99dp"
                android:textColor="#000000"
                android:textAlignment="center"
                android:background="@drawable/text_1"/>
            <TextView
                android:layout_width="95dp"
                android:layout_height="20dp"
                android:layout_below="@+id/name_job"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="26dp"
                android:textSize="15dp"
                android:textColor="#000000"
                android:text="Job Category" />
            <EditText
                android:id="@+id/category_job"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_below="@+id/name_job"
                android:layout_alignLeft="@+id/nameView"
                android:layout_marginLeft="99dp"
                android:layout_marginTop="26dp"
                android:textAlignment="center"
                android:background="@drawable/text_1" />
            <TextView
                android:layout_width="95dp"
                android:layout_height="20dp"
                android:layout_below="@+id/category_job"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="28dp"
                android:textSize="15dp"
                android:textColor="#000000"
                android:text="Last Date"
                />
            <EditText
                android:id="@+id/last_date_job"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_below="@+id/category_job"
                android:layout_alignLeft="@+id/nameView"
                android:layout_marginLeft="99dp"
                android:layout_marginTop="28dp"
                android:textAlignment="center"
                android:background="@drawable/text_1"
                />
            <TextView
                android:layout_width="95dp"
                android:layout_height="20dp"
                android:layout_below="@+id/last_date_job"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:textSize="15dp"
                android:textColor="#000000"
                android:text="Stipen/Salary"
                />
            <EditText
                android:id="@+id/stipen_salary_job"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_below="@+id/last_date_job"
                android:layout_alignLeft="@+id/nameView"
                android:layout_marginLeft="99dp"
                android:layout_marginTop="30dp"
                android:textAlignment="center"
                android:background="@drawable/text_1"
                />
            <TextView
                android:layout_width="95dp"
                android:layout_height="20dp"
                android:layout_below="@+id/stipen_salary_job"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="32dp"
                android:textSize="15dp"
                android:textColor="#000000"
                android:text="Experience" />
            <EditText
                android:id="@+id/experience_job"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:layout_below="@+id/stipen_salary_job"
                android:layout_alignLeft="@+id/nameView"
                android:layout_marginLeft="99dp"
                android:layout_marginTop="32dp"
                android:textAlignment="center"
                android:background="@drawable/text_1" />
            <TextView
                android:layout_width="95dp"
                android:layout_height="40dp"
                android:layout_below="@+id/experience_job"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="34dp"
                android:textSize="15dp"
                android:textColor="#000000"
                android:text="Job Details"  />
            <EditText
                android:id="@+id/detail_job"
                android:layout_width="250dp"
                android:layout_height="160dp"
                android:layout_below="@+id/experience_job"
                android:layout_alignLeft="@+id/nameView"
                android:layout_marginLeft="99dp"
                android:layout_marginTop="34dp"
                android:textAlignment="center"
                android:background="@drawable/text_1"
                />
            <EditText
                android:id="@+id/check_ad"
                android:layout_width="250dp"
                android:layout_height="20dp"
                android:layout_below="@+id/detail_job"
                android:layout_alignLeft="@+id/nameView"
                android:layout_marginLeft="99dp"
                android:layout_marginTop="34dp"
                android:textAlignment="center"
                android:text="click here to check the advertisement"
                android:textColor="#000000"
                android:background="@drawable/text_1"/>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
