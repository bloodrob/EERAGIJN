<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1"
    tools:context="com.dev.r19.SakoriSarothiClient.UserSearchCustomJobDetails">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/frame1">
        <TextView
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="cursive"
            android:text="@string/sel_job_info"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textAlignment="center"
            android:textStyle="bold"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/frame1"
        android:id="@+id/frame32">
    <ScrollView
        android:id="@+id/scroll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/frame32">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relative1">
            <TextView
                android:id="@+id/nameView"
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_alignBaseline="@+id/name_job"
                android:layout_marginLeft="16dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="Job Name :"/>
            <EditText
                android:id="@+id/name_job"
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_alignLeft="@+id/nameView"
                android:layout_marginLeft="99dp"
                android:textColor="#ffffff"
                android:textSize="12dp"
                android:focusable="false"
                android:gravity="left|top"
                android:background="#00000000"/>
            <TextView
                android:layout_width="95dp"
                android:layout_height="20dp"
                android:layout_below="@+id/name_job"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="26dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="Category:" />
            <EditText
                android:id="@+id/category_job"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_below="@+id/name_job"
                android:layout_alignLeft="@+id/nameView"
                android:layout_marginLeft="99dp"
                android:layout_marginTop="26dp"
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:gravity="top"
                android:textAlignment="center"
                android:background="#00000000" />
            <TextView
                android:layout_width="95dp"
                android:layout_height="20dp"
                android:layout_below="@+id/category_job"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="28dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="Last Date :"
                />
            <EditText
                android:id="@+id/last_date_job"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_below="@+id/category_job"
                android:layout_alignLeft="@+id/nameView"
                android:layout_marginLeft="99dp"
                android:layout_marginTop="28dp"
                android:textSize="14dp"
                android:textColor="#ffffff"
                android:gravity="top"
                android:focusable="false"
                android:textAlignment="center"
                android:background="#00000000"
                />
            <TextView
                android:layout_width="98dp"
                android:layout_height="20dp"
                android:layout_below="@+id/last_date_job"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="30dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="Stipen/Salary:"
                />
            <EditText
                android:id="@+id/stipen_salary_job"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_below="@+id/last_date_job"
                android:layout_alignLeft="@+id/nameView"
                android:layout_marginLeft="99dp"
                android:layout_marginTop="30dp"
                android:gravity="top|left"
                android:textColor="#ffffff"
                android:textSize="12dp"
                android:focusable="false"
                android:background="#00000000"
                />
            <TextView
                android:layout_width="95dp"
                android:layout_height="20dp"
                android:layout_below="@+id/stipen_salary_job"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="32dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="Experience :" />
            <EditText
                android:id="@+id/experience_job"
                android:layout_width="250dp"
                android:layout_height="120dp"
                android:layout_below="@+id/stipen_salary_job"
                android:layout_alignLeft="@+id/nameView"
                android:layout_marginLeft="99dp"
                android:layout_marginTop="32dp"
                android:textColor="#ffffff"
                android:textSize="12dp"
                android:gravity="top|left"
                android:focusable="false"
                android:background="#00000000" />
            <TextView
                android:layout_width="95dp"
                android:layout_height="40dp"
                android:layout_below="@+id/experience_job"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="34dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="Job Details :"  />
            <EditText
                android:id="@+id/detail_job"
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:layout_below="@+id/experience_job"
                android:layout_alignLeft="@+id/nameView"
                android:layout_marginLeft="99dp"
                android:layout_marginTop="34dp"
                android:textColor="#ffffff"
                android:textSize="12dp"
                android:gravity="top|left"
                android:focusable="false"
                android:background="#00000000"
                />
            <Button
                android:id="@+id/check_ad"
                android:layout_width="450dp"
                android:layout_height="30dp"
                android:layout_below="@+id/detail_job"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="34dp"
                android:textSize="12dp"
                android:text="click here to check the advertisement"
                android:textColor="#ffffff"
                android:background="#00000000"/>
        </RelativeLayout>
    </ScrollView>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/frame32">

        <TextView
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_marginBottom="70dp"
            android:background="#00000000"/>
    </FrameLayout>

</RelativeLayout>
