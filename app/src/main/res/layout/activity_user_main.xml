<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_3"
    tools:context="com.dev.r19.SakoriSarothiClient.UserMainActivity">




    <Button
        android:id="@+id/to_new_user"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_5"
        android:layout_marginTop="80dp"
        android:text="New user" />

    <Button
        android:id="@+id/to_register_user"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/to_new_user"
        android:background="@drawable/btn_5"
        android:layout_marginTop="45dp"
        android:text="Registered user" />
    <Button
        android:id="@+id/SignOUt"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_below="@+id/to_register_user"
        android:layout_marginTop="150dp"
        android:background="@drawable/btn_5"
        android:layout_centerHorizontal="true"
        android:text="Sign Out" />
</RelativeLayout>
